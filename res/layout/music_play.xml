<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/default_screenbg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_music_main" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_main_dark" />


    <FrameLayout
        android:id="@+id/layout_mediaswitch"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/btn_source_am"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_gravity="start|top"
            android:layout_marginStart="0dp"
            android:layout_marginTop="150dp"
            android:paddingBottom="20dp"
            android:paddingEnd="19dp"
            android:paddingStart="20dp"
            android:paddingTop="20dp"
            android:src="@drawable/selector_source_am" />

        <ImageView
            android:id="@+id/btn_source_fm"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_gravity="start|top"
            android:layout_marginStart="0dp"
            android:layout_marginTop="250dp"
            android:paddingBottom="19dp"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:paddingTop="18dp"
            android:src="@drawable/selector_source_fm" />

        <ImageView
            android:id="@+id/btn_source_usb"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_gravity="start|top"
            android:layout_marginStart="0dp"
            android:layout_marginTop="355dp"
            android:paddingBottom="19dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:src="@drawable/selector_source_usb" />

        <ImageView
            android:id="@+id/btn_source_bt"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_gravity="start|top"
            android:layout_marginStart="0dp"
            android:layout_marginTop="455dp"
            android:paddingBottom="20dp"
            android:paddingEnd="18dp"
            android:paddingStart="17dp"
            android:paddingTop="15dp"
            android:src="@drawable/selector_source_bt" />

        <ImageView
            android:id="@+id/btn_playlist"
            android:layout_width="80dp"
            android:layout_height="149dp"
            android:layout_gravity="end|top"
            android:layout_marginTop="269dp"
            android:paddingBottom="50dp"
            android:paddingTop="55dp"
            android:paddingEnd="14dp"
            android:paddingStart="13dp"
            android:src="@drawable/selector_source_list" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="430dp"
            android:layout_gravity="start|top"
            android:layout_marginStart="0dp"
            android:layout_marginTop="130dp"
            android:background="@drawable/ic_left_btn_bg" />

        <ImageView
            android:id="@+id/right_bg"
            android:layout_width="80dp"
            android:layout_height="152dp"
           android:layout_gravity="end|top"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="269dp"
            android:background="@drawable/ic_right_btn_bg" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/layout_musicinfo"
        android:layout_width="1020dp"
        android:layout_height="420dp"
        android:layout_gravity="top"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="115dp"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/music_title"
            style="@style/timeText"
            android:layout_width="470dp"
            android:layout_height="80dp"
            android:layout_gravity="top|center_vertical"
            android:layout_marginTop="70dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="-1"
            android:singleLine="true"
            android:text="@string/music_matedate_unsupport"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/music_artist"
            style="@style/timeText"
            android:layout_width="470dp"
            android:layout_height="40dp"
            android:layout_gravity="top|center_vertical"
            android:layout_marginTop="180dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="-1"
            android:singleLine="true"
            android:text="@string/music_matedate_unsupport"
            android:textSize="32sp" />

        <ImageView
            android:id="@+id/music_defaultcover"
            android:layout_width="406dp"
            android:layout_height="406dp"
            android:layout_gravity="top|right"
            android:layout_marginRight="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rotate" />

        <ImageView
            android:layout_width="173dp"
            android:layout_height="334dp"
            android:layout_gravity="top|right"
            android:layout_marginTop="10dp"
            android:background="@drawable/album_util" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/layout_control"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom"
        android:layout_marginLeft="0dp"
        android:visibility="invisible" >

        <FrameLayout
            android:id="@+id/frame_seekbar"
            android:layout_width="480dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="150dp" >

            <com.hsae.d531mc.bluetooth.music.util.MySeekBar
                android:id="@+id/music_seekbar"
                style="@style/MusicSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/music_currenttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|top"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="55dp"
                android:text="@string/play_text_min"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/music_totaltime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:layout_marginRight="15dp"
                android:layout_marginTop="55dp"
                android:text="@string/play_text_max"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/seekbar_tail"
                android:layout_width="185dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:src="@drawable/seekbar_tail"
                android:visibility="gone" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/layout_playbtn"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_bottom_bar" >

            <ImageView
                android:layout_width="1dp"
                android:layout_height="105dp"
                android:layout_gravity="top|left"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/icon_vertical_split" />

            <ImageButton
                android:id="@+id/btn_prev"
                android:layout_width="123dp"
                android:layout_height="84dp"
                android:layout_gravity="top|left"
                android:layout_marginLeft="393dp"
                android:layout_marginTop="19dp"
                android:background="@color/transparent"
                android:paddingBottom="15dp"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:paddingTop="15dp"
                android:src="@drawable/btn_music_prev" />

            <ImageView
                android:id="@+id/btn_play"
                android:layout_width="134dp"
                android:layout_height="106dp"
                android:layout_gravity="top|left"
                android:layout_marginLeft="570dp"
                android:layout_marginTop="10dp"
                android:paddingBottom="15dp"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:paddingTop="15dp"
                android:src="@drawable/btn_music_play" />

            <ImageButton
                android:id="@+id/btn_next"
                android:layout_width="123dp"
                android:layout_height="84dp"
                android:layout_gravity="top|left"
                android:layout_marginLeft="757dp"
                android:layout_marginTop="19dp"
                android:background="@color/transparent"
                android:paddingBottom="15dp"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:paddingTop="15dp"
                android:src="@drawable/btn_music_next" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="105dp"
                android:layout_gravity="top|left"
                android:layout_marginLeft="938dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/icon_vertical_split" />

            <ImageView
                android:id="@+id/btn_repeat"
                android:layout_width="136dp"
                android:layout_height="81dp"
                android:layout_gravity="top|left"
                android:layout_marginLeft="956dp"
                android:layout_marginTop="18dp"
                android:paddingBottom="10dp"
                android:paddingLeft="31dp"
                android:paddingRight="37dp"
                android:paddingTop="19dp"
                android:src="@drawable/btn_music_repeat_singel" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="105dp"
                android:layout_gravity="top|left"
                android:layout_marginLeft="1108dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/icon_vertical_split" />

            <ImageView
                android:id="@+id/btn_shuffle"
                android:layout_width="135dp"
                android:layout_height="80dp"
                android:layout_gravity="top|left"
                android:layout_marginLeft="1127dp"
                android:layout_marginTop="18dp"
                android:paddingBottom="11dp"
                android:paddingLeft="33dp"
                android:paddingRight="35dp"
                android:paddingTop="17dp"
                android:src="@drawable/btn_music_shuffle_close" />
        </FrameLayout>
    </FrameLayout>

    <ImageView
        android:id="@+id/btn_home"
        android:layout_width="126dp"
        android:layout_height="87dp"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="19dp"
        android:paddingBottom="15dp"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:paddingTop="15dp"
        android:src="@drawable/btn_home" />

    <TextView
        android:id="@+id/text_disconnect_tip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="45sp" />

</FrameLayout>