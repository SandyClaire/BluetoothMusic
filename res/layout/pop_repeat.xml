<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/music_popup_wigth"
    android:layout_height="wrap_content"
    android:minWidth="@dimen/music_popup_wigth"
    android:background="@drawable/bg_music_repeat"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/btn_repeat_order"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_music_repeat_order" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/music_popup_wigth"
        android:layout_height="1dp"
        android:background="@drawable/division_horizontal" />

    <LinearLayout
        android:id="@+id/btn_repeat_all"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_music_repeat_all" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/music_popup_wigth"
        android:layout_height="1dp"
        android:background="@drawable/division_horizontal" />

    <LinearLayout
        android:id="@+id/btn_repeat_single"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_music_repeat_singel" />
    </LinearLayout>

</LinearLayout>